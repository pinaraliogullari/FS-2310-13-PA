@model List<CategoryViewModel>

    @section Styles{
        @await Html.PartialAsync("_DataTablesCssPartial")
    }

    @section Scripts{
        @await  Html.PartialAsync("_DataTablesJsPartial")
    }

    <div class="row">
            <div class="col-md-6">
                <h1 class="display-6 text-primary">Kategoriler</h1>
            </div>
            <div class="col-md-6">
            <a asp-area="admin"
               asp-controller="Category"
               asp-action="Create"
               class="btn btn-success float-end my-5">
                Kategori Ekle
            </a>
        </div>
    <table id="entityTable" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Description</th>
                <th>#</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                   
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@c.Url</td>
                    <td>@c.Description</td>

                    <td width="120">
                        <a asp-area="admin"
                           asp-controller="Category"
                           asp-action="Edit"
                           asp-route-id="@c.Id"
                           class="btn btn-warning btn-sm">
                            Düzenle
                        </a>
                        <a asp-area="admin"
                           asp-controller="Category"
                           asp-action="Delete"
                           asp-route-id="@c.Id"
                           class="btn btn-danger btn-sm">
                            Sil
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

